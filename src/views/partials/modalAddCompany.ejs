<div class="modal" id="modalAddCompany">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5>Nueva Empresa</h5>
            </div>
            <div class="modal-body">
                <form action="/administracion/stock/addCompany" method="POST">
                    
                    <div class="row">
                        <div class="col-md-6">
                            <input type="text" id="company" name="company" class="form-control" placeholder="Compañía">  
                        </div>
                        <div class="col-md-6">
                            <input type="text" id="CIF" name="CIF" class="form-control" placeholder="CIF">
                        </div>

                    </div>
                    <br>
                    <div class="row">
                        <div class="col-md-6">
                            <input type="email" id="correo" name="correo" class="form-control" placeholder="Email">
                        </div>
                        <div class="col-md-6">
                            <input type="text" id="telefono" name="telefono" class="form-control" placeholder="Teléfono">
                        </div>
                    </div>
                    <br>
                    <div class="row">
                        <div class="col">
                            <textarea class="form-control" rows="2" placeholder="Observaciones de la compañía" name="Observaciones"></textarea>
                        </div>
                    </div>
                    <br>
                    <div class="row">
                        <div class="col-md-12">
                            <label>Seleccione ámbito:</label>
                            <br>
                            <div class="form-check form-switch form-check-inline">
                                <input class="form-check-input form-control" type="checkbox" id="ambp" name="ambp">
                                <label class="form-check-label" for="ambp">Proveedor</label>
                            </div>
                            <div class="form-check form-switch form-check-inline">
                                <input class="form-check-input form-control" type="checkbox" id="ambm" name="ambm">
                                <label class="form-check-label" for="ambm">Marca</label>
                            </div>
                            <div class="form-check form-switch form-check-inline">
                                <input class="form-check-input form-control" type="checkbox" id="ambr" name="ambr">
                                <label class="form-check-label" for="ambr">Reparación</label>
                            </div>
                            <div class="form-check form-switch form-check-inline"> 
                                <input class="form-check-input form-control" type="checkbox" id="ambf" name="ambf">
                                <label class="form-check-label" for="ambf">Facturación</label>
                            </div>

                        </div>
                    </div>

                    <div class="modal-footer">
                        <div id="botonesmodal from-group">
                            <button type="submit" class="btn btn-success btn-md" >Crear</button>
                            <button type="button" class="btn btn-danger btn-md" data-bs-dismiss="modal">Cancelar</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>    
</div>