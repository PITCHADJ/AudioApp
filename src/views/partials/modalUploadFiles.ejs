<div class="modal" id="modalUploadFiles">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5>Subir Ficheros</h5>
            </div>
            <div class="modal-body">
                <div class="row">
                    <form  action="/pacientes/paciente/<%= patient.id %>/uploadFiles" method="POST" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label class="form-label">Multiple files input example</label>
                            <input name="imagenes" class="form-control" type="file" id="formFile" onchange="preview()" accept=".jpg, .jpeg, .png" multiple>
                          </div>
                          <div id="botonesmodal from-group">
                            <button type="submit" class="btn btn-success btn-md" >Subir</button>
                            <button type="button" class="btn btn-danger btn-md" data-bs-dismiss="modal">Cancelar</button>
                        </div>

                    </form>
                    
                </div>
            </div>
        </div>
    </div>
</div>



